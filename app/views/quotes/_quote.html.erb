<%= turbo_frame_tag quote do %>
  <div class="quote">
    <!-- `data: { turbo_frame: "_top" }` solves the problem when clicking on the quote link to take you to #show -->
    <%= link_to quote.name,
                quote_path(quote),
                data: { turbo_frame: "_top" } %>
    <div class="quote__actions">
      <%= button_to "Delete",
                    quote_path(quote),
                    method: :delete,
                    class: "btn btn--light" %>
      <%= link_to "Edit",
                  edit_quote_path(quote),
                  class: "btn btn--light" %>
    </div>
  </div>
<% end %>
